  ArrowRight: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="5" x2="19" y1="12" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>`,
  Globe: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"/><path d="M2 12h20"/></svg>`
};

const legalServices = [
  {
    icon: "Building",
    title: "Abertura de empresa",
    description: "CNPJ em 24h com orientação completa sobre enquadramento tributário",
    price: "A partir de R$ 297"
  },
  {
    icon: "FileText",
    title: "Emissão de notas fiscais",
    description: "Plataforma automatizada para emissão e controle fiscal",
    price: "Incluso nos planos"
  },
  {
    icon: "Calculator",
    title: "Diagnóstico tributário",
    description: "Análise completa com oportunidades de economia fiscal",
    price: "Consulta gratuita"
  },
  {
    icon: "Shield",
    title: "Compliance fiscal",
    description: "Automação completa de obrigações fiscais e trabalhistas",
    price: "A partir de R$ 197/mês"
  }
];

const businessServices = [
  {
    icon: "TrendingUp",
    title: "Mentoria estratégica",
    description: "Frameworks validados para crescimento sustentável",
    price: "R$ 497/mês"
  },
  {
    icon: "BarChart3",
    title: "Análise de mercado",
    description: "Relatórios personalizados sobre seu setor e concorrência",
    price: "A partir de R$ 297"
  },
  {
    icon: "Users",
    title: "BPO financeiro",
    description: "Terceirização inteligente de processos financeiros",
    price: "Sob consulta"
  },
  {
    icon: "Globe",
    title: "Estruturação para escala",
    description: "Preparação completa para crescimento e expansão",
    price: "A partir de R$ 997"
  }
];
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Soluções - Tucont</title>
</head>
<body class="min-h-screen bg-slate-950 text-white">
  <Header />
  
  <main class="pt-24">
    <!-- Hero Section -->
    <section class="py-16 px-4 bg-gradient-to-br from-slate-950 via-blue-950/30 to-slate-900">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-5xl md:text-6xl font-bold mb-8">
          <span class="bg-gradient-to-r from-white via-blue-200 to-orange-300 bg-clip-text text-transparent">
            Todas as nossas soluções
          </span>
        </h1>
        <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
          Descubra como a Tucont pode transformar sua empresa através das nossas duas avenidas integradas
        </p>
      </div>
    </section>

    <!-- Jornada está em components/userInterface separei o componente para deixar o código limpo -->
    <Journey />
    
    <!-- Avenida Legal -->
    <section class="py-16 px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-blue-500/20 text-blue-300 border border-blue-500/30 rounded-full px-6 py-3 mb-6">
            <span class="w-5 h-5" set:html={icons.Shield} />
            <span class="font-medium">Avenida Legal</span>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Conformidade e automação fiscal
          </h2>
          <p class="text-slate-300 text-lg">
            Deixe nossa IA cuidar de toda burocracia fiscal e trabalhista
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {legalServices.map((service) => (
            <div 
              class="bg-slate-900/80 backdrop-blur-xl border border-slate-700/50 rounded-2xl p-6 hover:bg-slate-800/80 transition-all duration-300 transform hover:scale-105"
            >
              <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-cyan-400 rounded-xl flex items-center justify-center mb-4">
                <span class="w-6 h-6 text-white" set:html={icons[service.icon]} />
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">{service.title}</h3>
              <p class="text-slate-400 mb-4 text-sm">{service.description}</p>
              <p class="text-blue-400 font-semibold text-sm mb-4">{service.price}</p>
              <button 
                onclick={`window.open('https://wa.me/5511999999999?text=${encodeURIComponent(`Olá! Tenho interesse no serviço: ${service.title}`)}', '_blank')`}
                class="w-full bg-gradient-to-r from-blue-500 to-cyan-500 hover:from-blue-600 hover:to-cyan-600 text-white rounded-xl py-2 text-sm"
              >
                Quero este serviço
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Avenida de Negócios -->
    <section class="py-16 px-4 bg-gradient-to-br from-slate-900 via-orange-950/20 to-slate-900">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-orange-500/20 text-orange-300 border border-orange-500/30 rounded-full px-6 py-3 mb-6">
            <span class="w-5 h-5" set:html={icons.TrendingUp} />
            <span class="font-medium">Avenida de Negócios</span>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Crescimento estratégico e mentoria
          </h2>
          <p class="text-slate-300 text-lg">
            Frameworks validados e mentoria especializada para escalar seu negócio
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {businessServices.map((service) => (
            <div 
              class="bg-slate-900/80 backdrop-blur-xl border border-slate-700/50 rounded-2xl p-6 hover:bg-slate-800/80 transition-all duration-300 transform hover:scale-105"
            >
              <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-red-500 rounded-xl flex items-center justify-center mb-4">
                <span class="w-6 h-6 text-white" set:html={icons[service.icon]} />
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">{service.title}</h3>
              <p class="text-slate-400 mb-4 text-sm">{service.description}</p>
              <p class="text-orange-400 font-semibold text-sm mb-4">{service.price}</p>
              <button 
                onclick={`window.open('https://wa.me/5511999999999?text=${encodeURIComponent(`Olá! Tenho interesse no serviço: ${service.title}`)}', '_blank')`}
                class="w-full bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white rounded-xl py-2 text-sm"
              >
                Quero este serviço
              </button>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Final -->
    <section class="py-16 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="bg-gradient-to-r from-slate-800/50 to-slate-700/50 backdrop-blur-xl border border-slate-600/50 rounded-3xl p-8">
          <h3 class="text-3xl font-bold text-white mb-4">
            Pronto para transformar sua empresa?
          </h3>
          <p class="text-slate-300 mb-6 text-lg">
            Fale conosco e descubra como a Tucont pode revolucionar seu negócio. 
          </p>
          <button 
            onclick={`window.open('https://wa.me/5511999999999?text=${encodeURIComponent(`Quero ajuda para escolher o melhor plano para minha empresa:`)}', '_blank')`}
            class="bg-gradient-to-r from-blue-500 via-purple-500 to-orange-500 hover:from-blue-600 hover:via-purple-600 hover:to-orange-600 text-white px-10 py-5 text-xl rounded-full shadow-2xl transform hover:scale-105 transition-all duration-300 flex items-center justify-center mx-auto"
          >
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Falar com especialista
            <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </button>
        </div>
      </div>
    </section>
  </main>
  <WhatsAppButton />
  <Footer />
</body>
</html>